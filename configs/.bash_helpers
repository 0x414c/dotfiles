#!/usr/bin/env bash

#
# ~/.bash_helpers
#


## Takes a note
function note {
    # if file doesn't exist, create it
    if [[ ! -f $HOME/.notes ]]; then
        touch "$HOME/.notes"
    fi

    if ! (($#)); then
        # no arguments, print file
        cat "$HOME/.notes"
    elif [[ "$1" == "-c" ]]; then
        # clear file
        >| "$HOME/.notes"
    else
        # add all arguments to file
        printf "%s\n" "$*" >> "$HOME/.notes"
    fi

    return 0
}

## Extracts an archive
function extract {
    local c e i

    (($#)) || return

    for i; do
        c=''
        e=1

        if [[ ! -r $i ]]; then
            echo "$0: file is unreadable: \`$i'" >&2
            continue
        fi

        case $i in
            *.t@(gz|lz|xz|b@(2|z?(2))|a@(z|r?(.@(Z|bz?(2)|gz|lzma|xz)))))
                   c=(bsdtar xvf);;
            *.7z)  c=(7z x);;
            *.Z)   c=(uncompress);;
            *.bz2) c=(bunzip2);;
            *.exe) c=(cabextract);;
            *.gz)  c=(gunzip);;
            *.rar) c=(unrar x);;
            *.xz)  c=(unxz);;
            *.zip) c=(unzip);;
            *)     echo "$0: unrecognized file extension: \`$i'" >&2
                   continue;;
        esac

        command "${c[@]}" "$i"
        ((e = e || $?))
    done

    return "$e"
}

## Compiles source file w/ GCC
## USAGE: ccc FILE
function ccc {
    [[ $1 ]]    || { echo "Missing operand" >&2; return 1; }
    [[ -r $1 ]] || { printf "File %s does not exist or is not readable\n" "$1" >&2; return 1; }
	local output_path=${TMPDIR:-/tmp}/${1##*/};
	gcc "$1" -o "$output_path" && "$output_path";
	rm "$output_path";

    return 0;
}

## Checks if particular command exists in the system
## USAGE: cmd_exists COMMAND
function cmd_exists {
    command -pv "$1" >/dev/null 2>&1
}

## Prints horizontal separator line
## USAGE: hr ['CHAR']
function hr {
## "*" "═" "▬" "━"
    [[ -z "$1" ]] && local ch="━" || local ch="$1"
    yes "$ch" | head -n $COLUMNS | tr -d '\n'
}

## Search manpage given in argument `$1' for term given in argument `$2' (case insensitive)
## displays paginated result with colored search terms and two lines surrounding each hit
## USAGE: manf PAGE TERM
function manf {
    man "$1" | grep -iC2 "$2" | less
}

## Makes a new dir and cds into it
## USAGE: mkcd DIRECTORY
function mkcd {
    mkdir -pv "$1" && cd "$1"
}

## Makes history backup
function backup_history {
    [[ ! -f "$HISTFILE" ]] && touch "$HISTFILE"
    [[ ! -f "$HISTFILE2" ]] && touch "$HISTFILE-"
    cp "$HISTFILE" "$HISTFILE-" 1>/dev/null 2>&1
}

## See `https://gist.github.com/lelandbatey/8677901'
## USAGE: wb_clean INPUT OUTPUT
function wb_clean {
	convert "$1" -morphology Convolve DoG:15,100,0 -negate -normalize -blur 0x1 -channel RBG -level 60%,91%,0.1 "$2"
}

## Notifies user when specified command finishes executing
## USAGE: alert [COMMAND [ARGS...]]
## NOTE: for icon names
## see `http://standards.freedesktop.org/icon-naming-spec/icon-naming-spec-latest.html'
function alert {
    local summary="$@"
    local start=$(date +%s)
    eval '$@'
    local retcode="$?"
    notify-send --urgency=normal --icon=utilities-terminal --expire-time=0 "Finished \"$summary\"." "Time elapsed: $(($(date +%s) - start)) seconds.\nReturn code: $retcode."
}

## Quick timer
## USAGE: timer [NUMBER[SUFFIX]]
## SUFFIX may be `s' for seconds (the default), `m' for minutes, `h' for hours or `d' for days.
## If no argument is given, the default timespan will be 5 minutes.
function timer {
    [[ -z "$1" ]] && local duration="5m" || local duration="$1"
    sleep $duration
    tput bel
    notify-send --urgency=normal --icon=appointment-soon --expire-time=0 "$duration expired."
}

